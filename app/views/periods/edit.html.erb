<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <script type="text/javascript">
      Ext.onReady(function(){

        var dimensionCombo = new Ext.form.ComboBox({
          displayField:'name',
          emptyText:'请选择...',
          forceSelection: true,
          name:'dimension',
          mode: 'remote',
          store: common.dimensionDS,
          triggerAction: 'all',
          typeAhead: true,
          valueField:'id',
          x: 70,
          y: 30,
          labelWidth: 50,
          fieldLabel: '系列'
        });
        
        Ext.define('WinThread', {
          extend: 'Ext.data.Model',
          fields: [
            {name: 'id'},
            {name: 'name'},
            {name: 'year'},
            {name: 'dimension',mapping:'dimension_id', convert: str2IntRender}
          ]
        });
        
        var winForm = new Ext.form.FormPanel({
          url:'periods/<%=params[:id]%>',
          height: 268,
          width: 369,
          layout: 'absolute',
          border: false,
          frame:true,
          reader: new Ext.data.JsonReader({
            model: 'WinThread'
          }),
          items: [
            {
              xtype: 'hidden',
              value: '<%= form_authenticity_token.to_s %>',
              name: 'authenticity_token'
            },
            dimensionCombo,
            {
              xtype: 'label',
              x: 70,
              y: 80,
              height: 20,
              width: 50,
              text: '年份：'
            },
            {
              xtype: 'textfield',
              x: 140,
              y: 80,
              name: 'year'
            },
            {
              xtype: 'label',
              x: 70,
              y: 130,
              height: 20,
              width: 50,
              text: '名称：'
            },
            {
              xtype: 'textfield',
              x: 140,
              y: 130,
              name: 'name'
            },
            {
              xtype: 'button',
              x: 140,
              y: 180,
              height: 30,
              width: 80,
              text: '保存',
              handler: function(){
                if (winForm.form.isValid()) {
                  winForm.form.submit({
                    method: 'put',
                    waitMsg: '正在处理...',
                    success: function(result, response){
                      Ext.MessageBox.alert('提示', '成功！');
                      Ext.getCmp('win').close();
                    },
                    failure: function(result, response){
                      Ext.MessageBox.alert('错误提示', response.result.info);
                    }
                  });
                }else {
                  Ext.MessageBox.alert('错误提示', '请按要求填写必输选项.');
                }
              }
            }
          ]
        });

        winForm.form.load({
          url: 'periods/edit_data?id=<%=params[:id]%>',
          params: {
            authenticity_token: '<%= form_authenticity_token.to_s %>'
          },
          success: function(form, action){
          },
          failure: function(form, action){
            Ext.MessageBox.alert('提示信息', '信息加载失败');
          }
        });
        winForm.render('periods_edit_div');
        common.dimensionDS.reload();
      });
    </script>
  </head>
  <body>

    <div id="periods_edit_div" style="width:100%; height:100%"></div>
  </body>
</html>

