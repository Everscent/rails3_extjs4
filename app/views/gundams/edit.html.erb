<h1>Editing gundam_avatar</h1>

<%= form_for(@gundam) do |f| %>

  <%= image_tag @gundam.avatar_url(:big) %>

  <%= f.text_field :name %>

  <%= f.file_field :avatar %>

  <%= f.text_field :remote_avatar_url %>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @gundam %> |
<%= link_to 'Back', gundams_path %>
