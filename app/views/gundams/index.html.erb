<% content_for :header do%>
  <%= javascript_include_tag  "gundams" %>
<%end%>
<%= collection_select Gundam, :dimension_id, Dimension.order(:name), :id, :name, include_blank: true  %>
<%= grouped_collection_select Gundam, :period_id, Dimension.order(:name).includes(:periods), :periods, :name, :id, :year, include_blank: true  %>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>大头贴</th>
      <th>时期</th>
      <th>型号</th>
      <th>英文名</th>
      <th>中文名</th>
    </tr>
  </thead>
  <tbody>
    <% @gundams.each do |gundam| %>
      <tr>
        <td><%= link_to image_tag(gundam.avatar_url(:thumb)), gundam %></td>
        <td><%= year_title gundam.period %></td>
        <td><%= link_to gundam.model, gundam %></td>
        <td><%= link_to gundam.name, gundam %></td>
        <td><%= link_to gundam.name_chs, gundam %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @gundams, :renderer => BootstrapPagination::Rails %>