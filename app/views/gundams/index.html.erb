<% content_for :header do%>
  <script type="text/javascript">

    Ext.onReady(function(){

      Ext.define('ForumThread', {
        extend: 'Ext.data.Model',
        fields: [
          {name: 'id'},
          {name: 'name'},
          {name: 'name_chs'},
          {name: 'model'},
          {name: 'created_at'},
          {name: 'year',mapping:'period', convert: function(value){return getAttr(value,'year')}},
          {name: 'type',mapping:'type', convert: function(value){return getAttr(value,'name')}}
        ],
        idProperty: 'threadid'
      });

      common.gundamslistDS = Ext.create('Ext.data.Store', {
        id: 'store',
        model: 'ForumThread',
        remoteGroup: true,
        pageSize: common.list_num,
        proxy: {
          type: 'ajax',
          url: 'gundams/index_data',
          reader: {
            root: 'root',
            totalProperty: 'totalProperty'
          },
          simpleSortMode: true,
          simpleGroupMode: true,
          groupParam: 'sort',
          groupDirectionParam: 'dir'
        },
        sorters: [{
            property: 'threadid',
            direction: 'ASC'
          }]
      });

      var grid = Ext.create('Ext.grid.Panel', {
        id:'button-grid',
        store: common.gundamslistDS,
        header : false,
        columns: [
          {text: '',dataIndex: 'id',width:40,hidden:true},
          {text: '年代',dataIndex: 'year',width:50},
          {text: '型号',dataIndex: 'model',width:180},
          {text: '名称',dataIndex: 'name',width:220},
          {text: '中文名',dataIndex: 'name_chs',width:180},
          {text: '类型',dataIndex: 'type',width:90},
          {text: '创建时间',dataIndex: 'created_at',width:110,renderer: Ext.util.Format.dateRenderer('Y-m-d H:i')}
        ],
        columnLines: true,
        selModel: Ext.create('Ext.selection.CheckboxModel', {}),
        tbar:['-',
          {
            text:'增加',
            width:50,
            iconCls: 'addItem',
            handler:function(){
              openWindow('win','增加',"gundams/new",614,280,common.gundamslistDS)
            }
          },'-',{
            text:'编辑',
            width:50,
            iconCls: 'editItem',
            handler:function(){
              var records = grid.getSelectionModel().getSelection();
              if(records.length==0){
                Ext.MessageBox.alert('提示信息', '请先选中一条记录。');
              }else{
                openWindow('win','编辑',"gundams/"+records[0].get('id')+"/edit",614,280,common.gundamslistDS)
              }
            }
          },'-',{
            text:'删除',
            width:50,
            iconCls: 'deleteItem',
            handler:function(){
              var records = grid.getSelectionModel().getSelection();
              if(records.length==0){
                Ext.MessageBox.alert('提示信息', '请先选中一条记录。');
              }else{
                Ext.MessageBox.confirm('警告','确定要删除该记录吗？',function (button){
                  if(button=='yes'){
                    Ext.Ajax.request({
                      url : 'gundams/'+records[0].get('id'),
                      method : 'DELETE',
                      waitMsg: '正在提交...',
                      params: {
                        authenticity_token: '<%= form_authenticity_token.to_s %>'
                      },
                      success : function (response,opts) {
                        Ext.MessageBox.alert('消息', '操作成功！');
                        common.gundamslistDS.reload();
                      },
                      failure : function (result, request){
                        Ext.MessageBox.alert('消息', data.info);
                      }
                    });
                  }
                })
              }
            }
          },'-',{
            text:'发送邮件',
            iconCls: 'emailGo',
            handler:function(){
              var records = grid.getSelectionModel().getSelection();
              if(records.length==0){
                Ext.MessageBox.alert('提示信息', '请先选中一条记录。');
              }else{
                Ext.Ajax.request({
                  url : 'gundams/send_info',
                  method : 'GET',
                  waitMsg: '正在提交...',
                  params: {
                    authenticity_token: '<%= form_authenticity_token.to_s %>',
                    gundam_id: records[0].get('id')
                  },
                  success : function (response,opts) {
                    Ext.MessageBox.alert('消息', '发送成功！');
                  },
                  failure : function (result, request){
                    Ext.MessageBox.alert('消息', data.info);
                  }
                });
              }
            }
          }],
        bbar: new Ext.PagingToolbar({
          pageSize: common.list_num,
          store: common.gundamslistDS,
          displayInfo: true,
          displayMsg: "显示第 {0} 条到 {1} 条记录，一共 {2} 条",
          emptyMsg: "没有记录"
        }),
        border:false,
        height : Ext.get("<%=params[:controller]%>_<%=params[:action]%>_div").getHeight(),
        iconCls: 'icon-grid'
      });
        
      grid.render('<%=params[:controller]%>_<%=params[:action]%>_div');
      common.gundamslistDS.load();
    })
  </script>
<%end%>

