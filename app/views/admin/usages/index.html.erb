<% content_for :header do%>
  <script type="text/javascript">

    Ext.onReady(function(){

      Ext.define('ForumThread', {
        extend: 'Ext.data.Model',
        fields: [
          {name: 'id'},
          {name: 'name'},
          {name: 'created_at'}
        ],
        idProperty: 'threadid'
      });

      common.usageslistDS = Ext.create('Ext.data.Store', {
        id: 'store',
        model: 'ForumThread',
        remoteGroup: true,
        pageSize: common.list_num,
        proxy: {
          type: 'ajax',
          url: '<%= index_data_admin_usages_path %>',
          reader: {
            root: 'root',
            totalProperty: 'totalProperty'
          },
          simpleSortMode: true,
          simpleGroupMode: true,
          groupParam: 'sort',
          groupDirectionParam: 'dir'
        },
        sorters: [{
            property: 'threadid',
            direction: 'ASC'
          }]
      });

      var grid = Ext.create('Ext.grid.Panel', {
        id:'button-grid',
        store: common.usageslistDS,
        header : false,
        columns: [
          {text: '',dataIndex: 'id',width:40,hidden:true},
          {text: '类型',dataIndex: 'name',width:200},
          {text: '创建时间',dataIndex: 'created_at',width:110,renderer: Ext.util.Format.dateRenderer('Y-m-d H:i')}
        ],
        columnLines: true,
        selModel: Ext.create('Ext.selection.CheckboxModel'),
        tbar:['-',
          {
            text:'增加',
            width:50,
            iconCls: 'addItem',
            handler:function(){
              openWindow('win','增加',"admin/usages/new",360,132,common.usageslistDS)
            }
          },'-',{
            text:'编辑',
            width:50,
            iconCls: 'editItem',
            handler:function(){
              var records = grid.getSelectionModel().getSelection();
              if(records.length==0){
                Ext.MessageBox.alert('提示信息', '请先选中一条记录。');
              }else{
                openWindow('win','编辑',"admin/usages/"+records[0].get('id')+"/edit",360,132,common.usageslistDS)
              }
            }
          },'-',{
            text:'删除',
            width:50,
            iconCls: 'deleteItem',
            handler:function(){
              var records = grid.getSelectionModel().getSelection();
              if(records.length==0){
                Ext.MessageBox.alert('提示信息', '请先选中一条记录。');
              }else{
                Ext.MessageBox.confirm('警告','确定要删除该记录吗？',function (button){
                  if(button=='yes'){
                    Ext.Ajax.request({
                      url : 'admin/usages/'+records[0].get('id'),
                      method : 'DELETE',
                      waitMsg: '正在提交...',
                      params: {
                        authenticity_token: '<%= form_authenticity_token.to_s %>'
                      },
                      success : function (response,opts) {
                        Ext.MessageBox.alert('消息', '操作成功！');
                        common.usageslistDS.reload();
                      },
                      failure : function (result, response){
                        Ext.MessageBox.alert('消息', response.result);
                      }
                    });
                  }
                })
              }
            }
          }],
        bbar: new Ext.PagingToolbar({
          pageSize: common.list_num,
          store: common.usageslistDS,
          displayInfo: true,
          displayMsg: "显示第 {0} 条到 {1} 条记录，一共 {2} 条",
          emptyMsg: "没有记录"
        }),
        border:false,
        height : Ext.get("<%=params[:controller]%>_<%=params[:action]%>_div").getHeight(),
        iconCls: 'icon-grid'
      });

      grid.render('<%=params[:controller]%>_<%=params[:action]%>_div');
      common.usageslistDS.load();
    })
  </script>
<%end%>