<% content_for :header do%>
  <%= javascript_include_tag  "gundam_photos" %>
<%end%>
<div id="container">
<% @gundam_photos.each do |gundam_photo| %>
  <div class="item">
    <a href="<%= gundam_photo.image_url(:big) %>" rel="lightbox" title="my caption"><%= image_tag gundam_photo.image_url(:list), class: "img-polaroid" %></a>
  </div>
<% end %>
</div>

<%= link_to 'New Gundam photo', new_gundam_photo_path %>